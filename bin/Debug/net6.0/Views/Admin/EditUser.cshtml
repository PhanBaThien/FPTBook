@model ApplicationUser

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-body">
        <h1 class="card-title" style="text-align:center; font-size:30px">Edit User</h1>

        <form asp-controller="Admin" asp-action="EditUser" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="User_Name">User Name</label>
                <input type="text" class="form-control" id="User_Name" name="User_Name" asp-for="User_Name" value="@Model.User_Name" required />
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" value="@Model.Email" required />
            </div>

            <div class="form-group">
                <label for="PhoneNumber">Phone Number</label>
                <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber" value="@Model.PhoneNumber" />
            </div>

            <div class="form-group">
                <label for="User_Img">Image</label>
                @if (Model.User_Img == null)
                {
                    <img src="~/images/NoImage.png" width="100px" height="150px">
                }
                else
                {
                    <img src="~/uploads/@Model.User_Img" width="100px" height="150px">
                }
                <input type="file" class="form-control-file" id="User_Img" name="User_Img" />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
